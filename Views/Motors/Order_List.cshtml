@model IEnumerable<SalesMotorcycle.Models.Order>

@{
    ViewData["Title"] = "Order_List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order_List</h1>

<table class="table">
    <thead>
        <tr>    
            <th>
                @Html.DisplayNameFor(model => model.Fname_Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STT_item)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fname_Lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number_item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STT_item)
                </td>
                <td>
                    <a asp-action="Edit_Order" asp-route-id="@item.Id" class="btn btn-warning">แก้ไขการสั่งซื้อ</a> |
                    <a asp-action="Delete_Order" asp-route-id="@item.Id" class="btn btn-danger">ลบการสั่งซื้อ</a>
                </td>
            </tr>
        }
    </tbody>
</table>
