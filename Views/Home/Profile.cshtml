@model IEnumerable<SalesMotorcycle.Models.Order>

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profile</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STT_item)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number_item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum_Price)
                </td>
                <td>
                    @if (item.STT_item == "1")
                    {
                        <h5><b>ยังไม่ได้จ่ายเงิน</b></h5>
                    }
                    else if (item.STT_item == "2")
                    {
                        <h5><b>จ่ายเงินแล้ว</b></h5>
                    }
                </td>
                <td>
                    @if (item.STT_item == "1")
                    {
                        <a asp-action="Pay" asp-route-id="@item.Id" class="btn btn-outline-info">จ่ายเงิน</a>
                        <a asp-action="Delete_Buy" asp-route-id="@item.Id" class="btn btn-outline-danger">ยกเลิก</a>
                    }
                    else if (item.STT_item == "2")
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">ติดต่อสอบถาม</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
